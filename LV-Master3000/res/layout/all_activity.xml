<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="234dp" android:layout_gravity="center|top">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="222dp" android:layout_gravity="center_vertical|top">
            <Button
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Lectures"
                    android:id="@+id/lectureButton" android:layout_gravity="center" android:layout_marginTop="20dp"
                    />
            <Button
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Homework"
                    android:id="@+id/homeworkButton" android:layout_gravity="center" android:layout_marginTop="20dp"
                    />
            <Button
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Exams"
                    android:id="@+id/examsButton" android:layout_gravity="center" android:layout_marginTop="20dp"
                    />
            <Button
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Books"
                    android:id="@+id/booksButton" android:layout_gravity="center"
                    android:gravity="center_horizontal" android:layout_marginTop="20dp"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:layout_gravity="bottom|center" android:gravity="fill_horizontal|bottom">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="42dp" android:layout_gravity="center|bottom">
            <Button
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="Top 3"
                    android:id="@+id/top3Button" android:layout_gravity="center_horizontal"/>
            <Button
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="All"
                    android:id="@+id/allButton" android:layout_gravity="center_horizontal"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>