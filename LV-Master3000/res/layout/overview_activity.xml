<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
        <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/listView" android:layout_gravity="center|top"
                android:footerDividersEnabled="true"
                android:layout_above="@id/add_new_btn" android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true" android:layout_alignParentRight="true"
                android:layout_alignParentStart="false"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_new"
                android:id="@id/add_new_btn" android:layout_gravity="center|bottom"
                android:layout_alignParentBottom="true" android:layout_alignParentRight="false"
                android:layout_alignParentLeft="false" android:layout_centerHorizontal="true"/>
</RelativeLayout>